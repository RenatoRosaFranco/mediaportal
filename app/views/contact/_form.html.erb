<%= form_for(@contact) do |f| %>
	
	<!-- 
	<%= has_errors?(@contact) %>
	-->
	
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control',
		required: 'required', placeholder: 'Digite o nome',
		autocomplete: 'off' %>
	</div>
	<div class="field">
		<%= f.label :phone %>
		<%= f.text_field :phone, class: 'form-control',
		required: 'required', placeholder: 'Digite o telefone',
		autocomplete: 'off' %>
	</div>
	<div class="field">
		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-control',
		required: 'required', placeholder: 'Digite o e-mail',
		autocomplete: 'off' %>
	</div>
	<div class="field">
		<%= f.label :message %>
		<%= f.text_area :message, class: 'form-control', 
		required: 'required', placeholder: 'Deixe sua mensagem',
		autocomplete: 'off' %>
	</div>
	<div class="field">
		<%= f.submit 'Enviar Mensagem', class: 'btn btn-primary btn-lg top' %>
	</div>
<% end %>